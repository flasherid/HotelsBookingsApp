<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back3"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Edit My Hotels"
        android:id="@+id/textView57"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView13"
        android:layout_gravity="center">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Select your hotel"
                    android:id="@+id/textView63" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/edithhn_sp"
                    android:spinnerMode="dropdown" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edithform"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Hotel general informations"
                    android:id="@+id/textView65"
                    android:layout_marginTop="10dp" />

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Hotel name "
                            android:id="@+id/textView66" />

                        <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/edithname" />
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Hotel rating"
                            android:id="@+id/textView84" />

                        <Spinner
                            android:layout_width="190dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/edithrate_sp"
                            android:entries="@array/hotelrating_sp"
                            android:spinnerMode="dropdown" />
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Tel                "
                            android:id="@+id/textView85" />

                        <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/edithtel"
                            android:phoneNumber="true"
                            android:inputType="phone" />
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Website       "
                            android:id="@+id/textView86" />

                        <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/edithweb"
                            android:inputType="textWebEmailAddress" />
                    </TableRow>
                </TableLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Hotel services"
                    android:id="@+id/textView87"
                    android:layout_marginTop="10dp" />

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Wifi"
                            android:id="@+id/textView106" />

                        <Spinner
                            android:layout_width="190dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/edithwifisp"
                            android:entries="@array/noyes_sp"
                            android:spinnerMode="dropdown" />
                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Restaurent"
                            android:id="@+id/textView82" />

                        <Spinner
                            android:layout_width="190dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/edithrestausp"
                            android:entries="@array/noyes_sp"
                            android:spinnerMode="dropdown" />
                    </TableRow>
                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Parking"
                            android:id="@+id/textView88" />

                        <Spinner
                            android:layout_width="190dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/edithparking"
                            android:entries="@array/noyes_sp"
                            android:spinnerMode="dropdown" />
                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Swimming pool"
                            android:id="@+id/textView89" />

                        <Spinner
                            android:layout_width="190dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/edithswimp"
                            android:entries="@array/noyes_sp"
                            android:spinnerMode="dropdown" />
                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Celebration hall"
                            android:id="@+id/textView90" />

                        <Spinner
                            android:layout_width="190dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/edithcelbh"
                            android:entries="@array/noyes_sp"
                            android:spinnerMode="dropdown" />
                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:id="@+id/textView91"
                            android:text="Gym" />

                        <Spinner
                            android:layout_width="190dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/edithgym"
                            android:entries="@array/noyes_sp"
                            android:spinnerMode="dropdown" />
                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Games room"
                            android:id="@+id/textView92" />

                        <Spinner
                            android:layout_width="190dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/edithgamesr"
                            android:entries="@array/noyes_sp"
                            android:spinnerMode="dropdown" />
                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Helicopter landing"
                            android:id="@+id/textView93" />

                        <Spinner
                            android:layout_width="190dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/edithhelico"
                            android:entries="@array/noyes_sp"
                            android:spinnerMode="dropdown" />
                    </TableRow>
                </TableLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Hotel prices"
                    android:id="@+id/textView102"
                    android:layout_marginTop="10dp" />

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp" >

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:id="@+id/textView96"
                            android:text="Night price for one person (Adult)" />

                        <EditText
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:ems="10"
                            android:id="@+id/edith_night_p" />

                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/edith_swimp_row">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Swimming pool for one person (Adult)"
                            android:id="@+id/textView97" />

                        <EditText
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:ems="10"
                            android:id="@+id/edith_swimp_p" />

                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/edith_celebh_row">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Celebration hall"
                            android:id="@+id/textView98" />

                        <EditText
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:ems="10"
                            android:id="@+id/edith_celebh_p" />

                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/edith_restaut_row">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:id="@+id/textView99"
                            android:text="Single restaurent table reservation price " />

                        <EditText
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:ems="10"
                            android:id="@+id/edith_restaut_p" />

                    </TableRow>

                </TableLayout>

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:id="@+id/edithSave"
                    android:layout_gravity="center_horizontal"
                    android:background="@android:color/holo_green_light" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>